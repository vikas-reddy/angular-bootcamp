{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "lib": [
      "es2016",
      "dom"
    ],
    "outDir": "build",
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "More",
    "SKIP-create-bundle",
    "AOT-SKIP-rollup",
    "AOT-SKIP-cli",
    "AOT-SKIP-closure",
    "node_modules"
  ],
  "angularCompilerOptions": {
    "genDir": "aot",
    "skipMetadataEmit": true
  }
}
